# Application settings
APP_NAME="Your App Name"
APP_VERSION=1.0.0
APP_DESCRIPTION="Your application description"
APP_DEBUG=False
APP_HOST=localhost
APP_PORT=8000
APP_RELOAD=False
APP_API_DOCS_URL=/docs
APP_REDOC_URL=/redoc
APP_SCALARA_URL=/scalar
APP_OPENAPI_URL=/openapi.json

# Security settings
SECURITY_SECRET_KEY=your_secret_key_here_change_in_production
SECURITY_JWT_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database settings (MongoDB)
DATABASE_HOST=localhost
DATABASE_PORT=27017
DATABASE_NAME=your_database_name
DATABASE_USER=your_db_username
DATABASE_PASSWORD=your_db_password
DATABASE_AUTH_SOURCE=admin

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_USERNAME=your_redis_username
REDIS_SSL=False
REDIS_SSL_CERT_REQS=none
REDIS_SOCKET_CONNECT_TIMEOUT=10
REDIS_SOCKET_TIMEOUT=30
REDIS_CONNECTION_POOL_MAX_CONNECTIONS=100
REDIS_DECODE_RESPONSES=True

# Logger settings
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/app.log
LOG_RETENTION=30d
LOG_ROTATION=1d
LOG_HANDLERS=console,file
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S